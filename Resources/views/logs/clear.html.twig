{% extends ["main.html.twig", "@Common/main.html.twig"] %}

{% block title %}{{ 'logs.clear.label'|trans }}{% endblock %}

{% block content %}
    {{ form_start(form) }}

    <div class="card border-danger">
        <div class="card-header bg-danger text-white">{{ form.group_general.vars.legend|trans }}</div>

        <div class="card-body">

            {{ form_widget(form.group_general.confirm) }}
        </div>
    </div>

    {{ form_widget(form) }}

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-danger">
            <i class="fa fa-trash"></i> {{ 'actions.confirm'|trans }}
        </button>

        <a href="{{ path('admin_logs') }}" class="btn btn-sm btn-secondary">
            {{ 'actions.cancel'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}