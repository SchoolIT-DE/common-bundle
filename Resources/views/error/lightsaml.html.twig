{% extends "@Common/simple/main.html.twig" %}

{% block title %}{{ 'lightsaml_error.title'|trans({}, 'security') }}{% endblock %}

{% block header %}{% endblock %}

{% block content %}
    <div class="text-center">
        <i class="fas fa-sign-in fa-3x d-block text-secondary"></i>
        <h4>{{ 'lightsaml_error.title'|trans({}, 'security') }}</h4>
        <p>{{ 'lightsaml_error.text'|trans({}, 'security') }}</p>
    </div>

    <a href="{{ path(route) }}" class="btn btn-primary d-block">
        {{ 'lightsaml_error.button'|trans({}, 'security') }}
    </a>

    <hr>

    <p class="text-muted mb-0">
        Exception: {{ type }}<br>
        Message: {{ message }}
    </p>
{% endblock %}