{% extends ["main.html.twig", "@Common/main.html.twig"] %}

{% block title %}{{ 'messenger.label'|trans }}{% endblock %}

{% block content %}

    <div class="card">
        <div class="card-body">
            {{ 'messenger.count'|trans({'%count%': count}) }}
        </div>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover table-striped card-table">
                <thead>
                <tr>
                    <th>{{ 'messenger.type'|trans }}</th>
                </tr>
                </thead>

                <tbody>
                {% for envelope in envelopes %}
                    <tr>
                        <td><i class="fas fa-envelope-open-text"></i> {{ envelope.message|fqcn }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}