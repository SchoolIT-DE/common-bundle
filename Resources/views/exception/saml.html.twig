{% extends ["auth/main.html.twig", "@Common/auth/main.html.twig"] %}

{% block title %}{{ 'error.saml.label'|trans }}{% endblock %}

{% block content %}
    <div class="text-center">
        <i class="fas fa-key fa-3x d-block text-secondary"></i>
        <h4>{{ 'error.saml.label'|trans }}</h4>

        <p>{{ 'error.saml.message'|trans }}</p>
    </div>

    <div class="row">
        <div class="col-md-6 pr-0">
            <a href="{{ path(route) }}" class="btn btn-primary btn-block">{{ 'error.saml.retry'|trans }}</a>
        </div>
    </div>
{% endblock %}